# ProbeOps Backend Production Environment Configuration
# Rename this file to .env.backend and fill in the actual values

# Database Configuration
POSTGRES_USER=probeops_user
POSTGRES_PASSWORD=replace_with_strong_password
POSTGRES_DB=probeops
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# JWT Configuration
JWT_SECRET_KEY=replace_with_random_strong_secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Configuration
API_KEY_SECRET=replace_with_random_strong_secret
API_PORT=5000

# Worker Configuration
WORKERS=4
WORKER_TIMEOUT=120
KEEPALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Environment Settings
DEBUG=False
LOG_LEVEL=info
ENVIRONMENT=production
DOCKER_ENV=1

# Rate Limiting
RATE_LIMIT_DEFAULT="200 per day, 50 per hour"
RATE_LIMIT_AUTH="20 per minute"
RATE_LIMIT_PROBE="30 per minute"

# Security
# Never set these to true in production
ALLOW_DEMO_ADMIN=false
DISABLE_AUTH=false

# CORS Configuration
# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://probeops.com,https://www.probeops.com,http://35.173.110.195:3000,http://localhost:3000