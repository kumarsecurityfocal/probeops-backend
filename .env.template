# ===========================================
# ProbeOps API - Environment Configuration
# ===========================================
# This file serves as a template for configuring the ProbeOps API.
# Copy this file to .env and modify the values as needed for your environment.
# IMPORTANT: Never commit the actual .env file with real credentials to version control.

# API Configuration
# ---------------
API_PORT=5000
DEBUG=False

# Deployment Environment
# ---------------------
# Options: development, testing, production
ENVIRONMENT=development

# Security Settings
# ----------------
# IMPORTANT: Change these secrets in production!
# Use a strong random string generator to create these values
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
API_KEY_SECRET=change_this_to_another_secure_random_string

# CORS Configuration
# -----------------
# Comma-separated list of allowed origins (use * for development only)
CORS_ORIGINS=*

# PostgreSQL Database Configuration
# ---------------------------------
POSTGRES_USER=probeops
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=probeops
DB_PORT=5432
POSTGRES_HOST=db

# Database connection string for SQLAlchemy
# Format: postgresql://{username}:{password}@{hostname}:{port}/{database_name}
# In local Docker setup, hostname is 'db' (the service name in docker-compose)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:5432/${POSTGRES_DB}

# For production, update this to point to your actual database host
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@your-db-host:5432/${POSTGRES_DB}

# Connection Pool Settings
# -----------------------
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=300

# Rate Limiting Configuration
# --------------------------
# Default rate limits for API endpoints
RATE_LIMIT_DEFAULT=200/day;50/hour
RATE_LIMIT_AUTH=10/minute
RATE_LIMIT_PING=30/minute
RATE_LIMIT_TRACEROUTE=15/minute
RATE_LIMIT_DNS=30/minute
RATE_LIMIT_WHOIS=10/minute
RATE_LIMIT_HISTORY=60/minute

# API Documentation
# ----------------
API_TITLE=ProbeOps API
API_DESCRIPTION=Network diagnostics and probe operations API
API_VERSION=1.0.0
API_DOCS_URL=/docs

# Logging Configuration
# --------------------
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Gunicorn Server Configuration
# ----------------------------
WORKERS=4
WORKER_TIMEOUT=120
KEEPALIVE=5