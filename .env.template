# ProbeOps Development Environment Configuration
# Rename this file to .env and fill in the actual values

# Database Configuration
POSTGRES_USER=probeops_dev
POSTGRES_PASSWORD=dev_password
POSTGRES_DB=probeops_dev
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# JWT Configuration
JWT_SECRET_KEY=development_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Configuration
API_KEY_SECRET=development_api_key_secret
API_PORT=5000

# Worker Configuration
WORKERS=2
WORKER_TIMEOUT=120
KEEPALIVE=5

# Environment Settings
DEBUG=True
LOG_LEVEL=debug
ENVIRONMENT=development

# Rate Limiting
RATE_LIMIT_DEFAULT="500 per day, 100 per hour"
RATE_LIMIT_AUTH="50 per minute"
RATE_LIMIT_PROBE="100 per minute"

# Development Helpers
# These should always be false in production
ALLOW_DEMO_ADMIN=true
DISABLE_AUTH=false

# CORS Configuration
# Leave empty or "*" for development to allow all origins
# In production, set specific origins (see .env.backend.template)
CORS_ORIGINS=*