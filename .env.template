# API Configuration
# ---------------
API_PORT=5000
DEBUG=False

# Security Settings
# ----------------
# IMPORTANT: Change these secrets in production!
JWT_SECRET_KEY=change_this_to_a_secure_random_string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60
API_KEY_SECRET=change_this_to_another_secure_random_string

# PostgreSQL Database Configuration
# ---------------------------------
POSTGRES_USER=probeops
POSTGRES_PASSWORD=change_this_to_a_secure_password
POSTGRES_DB=probeops
DB_PORT=5432

# Database connection string for SQLAlchemy
# Format: postgresql://{username}:{password}@{hostname}:{port}/{database_name}
# In local Docker setup, hostname is 'db' (the service name in docker-compose)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# For production, update this to point to your actual database host
# DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@your-db-host:5432/${POSTGRES_DB}

# API Documentation
# ----------------
API_TITLE=ProbeOps API
API_DESCRIPTION=Network diagnostics and probe operations API
API_VERSION=1.0.0
API_DOCS_URL=/docs

# Logging Configuration
# --------------------
LOG_LEVEL=INFO